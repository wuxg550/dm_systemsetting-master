<assembly>
    <id>prod</id> <!--输出文件名-->
    <formats>
        <format>tgz</format> <!--打包文件结构-->
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>src/main/bin</directory>  <!-- 项目文件目录-->
            <outputDirectory>SystemSetting/bin</outputDirectory> <!--生成bin目录-->
            <directoryMode>0755</directoryMode> <!--目录执行权限-->
            <fileMode>0755</fileMode><!--文件执行权限-->
        </fileSet>
        <fileSet>
            <directory>src/main/assembly/prod/conf</directory>
            <outputDirectory>SystemSetting/config</outputDirectory>
            <directoryMode>0744</directoryMode>
            <fileMode>0644</fileMode>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>SystemSetting</outputDirectory>
            <includes>
                <include>readme.txt</include><!--打包包含readme.txt-->
            </includes>
            <directoryMode>0744</directoryMode>
            <fileMode>0644</fileMode>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/static/download</directory>
            <outputDirectory>SystemSetting/static/download</outputDirectory>
            <directoryMode>0744</directoryMode>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/dbs</directory>
            <outputDirectory>SystemSetting/dbs</outputDirectory>
            <directoryMode>0744</directoryMode>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <directory>lib</directory>
            <outputDirectory>SystemSetting/lib</outputDirectory>
            <directoryMode>0744</directoryMode>
            <fileMode>0644</fileMode>
        </fileSet>
        <fileSet>
            <directory>target</directory>
            <outputDirectory>SystemSetting/logs</outputDirectory>
            <excludes>
                <exclude>**/*</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>target</directory>
            <outputDirectory>SystemSetting</outputDirectory>
            <includes>
                <include>/*.jar</include>
            </includes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>SystemSetting/lib</outputDirectory><!-- 依赖jar包放置目录-->
        </dependencySet>
    </dependencySets>
</assembly>